<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.parthdoshi.articleshub.HomeProfilePage"
    tools:showIn="@layout/app_bar_home_profile_page">

    <TextView
        android:id="@+id/text_profile_page_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Profile"
        android:textSize="35sp"
        android:textColor="#000000"
        android:textAlignment="center"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_profile_page_heading">

        <TextView
            android:id="@+id/text_profile_page_emailid_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email ID - "
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="20dp"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/text_profile_page_emailid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email ID"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginTop="20dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_profile_page_userfname_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name - "
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/text_profile_page_userfname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:text="First Name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_profile_page_userlname_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:text="Last Name - "
            android:textSize="20sp" />
        <TextView
            android:id="@+id/text_profile_page_userlname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:text="Last Name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_profile_page_userinfo_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:text="Your Description - "
            android:textSize="20sp" />
        <TextView
            android:id="@+id/text_profile_page_userinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="2"
            android:text="Your Description"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_edit_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_marginTop="35dp"
            android:text="Edit your details" />
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_marginTop="35dp"
            android:text="Logout" />



    </GridLayout>


</RelativeLayout>