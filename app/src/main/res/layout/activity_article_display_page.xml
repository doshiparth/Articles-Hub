<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_article_display_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.parthdoshi.articleshub.ArticleDisplayPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:focusable="true"
                android:gravity="center"
                android:text="Article Title"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/text_author_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_article_title"
                android:layout_margin="10dp"
                android:text="Author Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_article_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_author_name"
                android:layout_margin="10dp"
                android:text="Article Tag"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_article_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_article_tag"
                android:layout_margin="10dp"
                android:layout_marginStart="83dp"
                android:text="Article Date"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_article_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_article_date"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"
                android:inputType="textMultiLine"
                android:text="Article Content"
                android:textSize="20sp" />

            <ToggleButton
                android:id="@+id/btn_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_article_content"
                android:layout_marginTop="22dp"
                android:elevation="15dp"
                android:padding="0dp"
                android:textOff="Like"
                android:textOn="Liked" />

            <TextView
                android:id="@+id/total_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_article_content"
                android:layout_marginTop="35dp"
                android:layout_toEndOf="@id/btn_like"
                android:text="Total Likes"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edit_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btn_like"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:hint="Write your comment here"
                android:inputType="textMultiLine"
                android:text=""
                android:textSize="15sp" />

            <ToggleButton
                android:id="@+id/btn_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/edit_comment"
                android:layout_centerVertical="true"
                android:padding="0dp"
                android:textOff="Submit Comment"
                android:textOn="Edit Comment" />

            <Button
                android:id="@+id/btn_delete_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/edit_comment"
                android:layout_below="@+id/edit_comment"
                android:padding="0dp"
                android:text="Delete Comment"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_all_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_comment"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:visibility="gone"
                android:text="All Comments"
                android:textSize="18sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_all_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_all_comments"
                android:layout_marginTop="15dp"
                android:scrollbars="vertical"
                android:textSize="12sp" />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_edit_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Edit this article"
        android:visibility="gone" />


</RelativeLayout>
