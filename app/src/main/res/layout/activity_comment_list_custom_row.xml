<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_view_comments_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:padding="5dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="0dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shadow1"
        android:elevation="15dp">


        <TextView
            android:id="@+id/txt_custom_row_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:text="Comment Content"
            android:textColor="@color/blue"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txt_custom_row_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/txt_custom_row_comment"
            android:layout_margin="10dp"
            android:text="Username"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_custom_row_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/txt_custom_row_comment"
            android:layout_margin="10dp"
            android:text="Comment Date"
            android:textSize="15sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
