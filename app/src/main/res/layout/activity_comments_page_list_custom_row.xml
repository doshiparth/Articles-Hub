<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_view_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:padding="5dp"
    app:cardBackgroundColor="#E0E0E0"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shadow"
        android:elevation="0dp">

        <TextView
            android:id="@+id/txt_comments_page_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Comment Content"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_comments_page_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/txt_comments_page_content"
            android:text="Comment DATE and TIME"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_gotoarticle"
            android:layout_width="15dp"
            android:layout_height="35dp"
            android:layout_below="@id/txt_comments_page_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/txt_comments_page_date"
            android:layout_alignParentEnd="true"
            android:text="View Post"
            android:textSize="12sp"
            android:padding="0dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
