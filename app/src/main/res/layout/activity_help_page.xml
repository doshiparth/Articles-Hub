<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.parthdoshi.articleshub.HelpPage">

    <TextView
        android:id="@+id/txt_help_page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Help Page"
        android:layout_margin="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="30sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txt_help_page_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Help text"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:layout_below="@id/txt_help_page_title"/>

</RelativeLayout>
